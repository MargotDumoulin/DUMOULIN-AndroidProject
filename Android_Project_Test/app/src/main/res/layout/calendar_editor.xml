<!-- Layout for the editor -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Load the toolbar here -->

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Measurement category -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Day Name" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <EditText
                android:id="@+id/edit_day_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monday"
                android:inputType="text" />

            <!-- Units for weight (kg) -->
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Day Date" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <EditText
                android:id="@+id/edit_day_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="28/04/2019"
                android:inputType="date" />

            <!-- Units for weight (kg) -->
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Dish Name 1" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <!-- Units for weight (kg) -->

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Dish Name 2" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <!-- Units for weight (kg) -->

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Dish Name 3" />

        <!-- Input fields -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Weight field -->
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <!-- Units for weight (kg) -->

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
